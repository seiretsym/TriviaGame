{
  "name": "TriviaGame",
  "version": "1.0.0",
  "description": "A trivia game that plays random music tracks for the player to guess the correct song title. It utilizes jQuery/JS to plug in answer buttons and music.",
  "main": "server.ts",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "concurrently \"tsc\" \"cd client && npm run build\"",
    "heroku-postbuild": "npm run build",
    "seed": "cd seed && node seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seiretsym/TriviaGame.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seiretsym/TriviaGame/issues"
  },
  "homepage": "https://github.com/seiretsym/TriviaGame#readme",
  "dependencies": {
    "@types/express": "^4.17.11",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.9.7"
  },
  "devDependencies": {
    "concurrently": "5.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
